<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg"
    android:padding="16dp"
    tools:context=".Cart">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listCart"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/DarkRed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam: "
                    android:textSize="20sp"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â‚º 10,00 "
                    android:textSize="26sp"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:id="@+id/total"/>


            </LinearLayout>
            <github.ishaan.buttonprogressbar.ButtonProgressBar
                android:id="@+id/btnPlaceOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                app:text="Siparisi Gonder"
                app:bgColor="@color/Goldenrod"
                app:progColor="@color/DarkGoldenrod"
                app:textColor="@android:color/white"
                app:type="indeterminate"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>